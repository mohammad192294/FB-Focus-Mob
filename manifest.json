{
  "manifest_version": 3,
  "name": "FB Text Focus (Clean)",
  "version": "4.1",
  "description": "Removes Nav Gaps, Stories, and Videos from Facebook completely.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
