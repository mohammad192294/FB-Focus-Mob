{
  "manifest_version": 3,
  "name": "FB Text Only v13 (No Video/Reels)",
  "version": "13.0",
  "description": "Completely removes Video cards and Reels from the feed before they appear.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
