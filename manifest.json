{
  "manifest_version": 3,
  "name": "FB Clean Text (V7 Final)",
  "version": "7.0",
  "description": "Removes all Video cards, Stories, and Reels containers completely using CSS :has selector.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
