{
  "manifest_version": 3,
  "name": "FB Text-Only Endgame (v6)",
  "version": "6.0",
  "description": "The ultimate blocker for Videos, Stories, and Reels on Facebook without crashing.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
