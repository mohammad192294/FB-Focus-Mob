{
  "manifest_version": 3,
  "name": "FB Text-Only Ultimate (No Gaps)",
  "version": "3.1",
  "description": "Removes Video/Reels/Watch tabs and feed units completely without leaving white spaces.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.fb.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
